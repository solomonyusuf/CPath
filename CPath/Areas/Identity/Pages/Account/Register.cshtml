@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<body class="bg-gradient-primary">
    <div class="container">
        <div class="card shadow-lg o-hidden border-0 my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-flex">
                        <div class="flex-grow-1 bg-register-image" style="background-image: url(https://localhost:5001/assets/img/hutomo-abrianto-X5BWooeO4Cw-unsplash.jpg);"></div>
                    </div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 style="text-align: center;color: var(--bs-blue);"><i class="fas fa-coins"></i>CPath</h1>
                                <h1 style="text-align: center;color: var(--bs-pink);font-size: 24px;font-style: italic;">School Software Management Database</h1>
                            </div>
                           
                            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 align=center>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
              
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control form-control-user" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control form-control-user" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control form-control-user" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
           <button class="btn btn-primary d-block btn-user w-100" type="submit">Register Account</button>
                                <hr><a class="btn btn-primary d-block btn-google btn-user w-100 mb-2" role="button"><i class="fab fa-google"></i>&nbsp; Register with Google</a><a class="btn btn-primary d-block btn-facebook btn-user w-100" role="button"><i class="fab fa-facebook-f"></i>&nbsp; Register with Facebook</a>
        </form>
                            <p class="text-center">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                     <p class="text-center">
                        <a id="Login" asp-page="./Login">Already have an account? Login!</a>
                    </p>
                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div></body>
